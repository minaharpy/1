    <script>
        const canvas = document.getElementById('scratchCanvas');
        const ctx = canvas.getContext('2d');
        let isDrawing = false;
        let scratched = 0;

        function initCanvas() {
            // ØªØ¹ÙŠÙŠÙ† Ø­Ø¬Ù… Ø§Ù„ÙƒØ§Ù†ÙØ³
            const rect = canvas.getBoundingClientRect();
            canvas.width = 350;
            canvas.height = 250;

            // Ø±Ø³Ù… Ø§Ù„Ø·Ø¨Ù‚Ø© Ø§Ù„ÙØ¶ÙŠØ© Ù„Ù„Ø®Ø±Ø¨Ø´Ø©
            const gradient = ctx.createLinearGradient(0, 0, canvas.width, canvas.height);
            gradient.addColorStop(0, '#C0C0C0');
            gradient.addColorStop(0.5, '#E8E8E8');
            gradient.addColorStop(1, '#A8A8A8');
            
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Ø¥Ø¶Ø§ÙØ© Ù†Øµ "Ø§Ø®Ø±Ø¨Ø´ Ù‡Ù†Ø§"
            ctx.fillStyle = '#666';
            ctx.font = 'bold 24px Arial';
            ctx.textAlign = 'center';
            ctx.fillText('Ø§Ø®Ø±Ø¨Ø´ Ù‡Ù†Ø§! ğŸ', canvas.width / 2, canvas.height / 2);

            scratched = 0;
        }

        function getEventPos(e) {
            const rect = canvas.getBoundingClientRect();
            const scaleX = canvas.width / rect.width;
            const scaleY = canvas.height / rect.height;
            
            let clientX, clientY;
            
            if (e.touches && e.touches[0]) {
                clientX = e.touches[0].clientX;
                clientY = e.touches[0].clientY;
            } else {
                clientX = e.clientX;
                clientY = e.clientY;
            }
            
            return {
                x: (clientX - rect.left) * scaleX,
                y: (clientY - rect.top) * scaleY
            };
        }

        function scratch(e) {
            if (!isDrawing) return;
            
            const pos = getEventPos(e);
            
            ctx.globalCompositeOperation = 'destination-out';
            ctx.beginPath();
            ctx.arc(pos.x, pos.y, 20, 0, Math.PI * 2);
            ctx.fill();
            
            scratched++;
            
            // Ø¥Ø°Ø§ ØªÙ… Ø§Ù„Ø®Ø±Ø¨Ø´Ø© Ø¨Ø´ÙƒÙ„ ÙƒØ§ÙÙØŒ Ø¥Ø²Ø§Ù„Ø© Ø§Ù„ÙƒØ§Ù†ÙØ³ Ø¨Ø§Ù„ÙƒØ§Ù…Ù„
            if (scratched > 50) {
                checkScratched();
            }
        }

        function checkScratched() {
            const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
            const pixels = imageData.data;
            let transparent = 0;
            
            for (let i = 3; i < pixels.length; i += 4) {
                if (pixels[i] < 128) transparent++;
            }
            
            const percentScratched = (transparent / (pixels.length / 4)) * 100;
            
            if (percentScratched > 40) {
                canvas.style.transition = 'opacity 0.5s';
                canvas.style.opacity = '0';
                setTimeout(() => {
                    canvas.style.display = 'none';
                }, 500);
            }
        }

        function resetCard() {
            canvas.style.display = 'block';
            canvas.style.opacity = '1';
            canvas.style.transition = 'none';
            initCanvas();
        }

        // Event listeners for mouse
        canvas.addEventListener('mousedown', (e) => {
            isDrawing = true;
            scratch(e);
        });

        canvas.addEventListener('mousemove', scratch);
        canvas.addEventListener('mouseup', () => isDrawing = false);
        canvas.addEventListener('mouseleave', () => isDrawing = false);

        // Event listeners for touch
        canvas.addEventListener('touchstart', (e) => {
            e.preventDefault();
            isDrawing = true;
            scratch(e);
        });

        canvas.addEventListener('touchmove', (e) => {
            e.preventDefault();
            scratch(e);
        });

        canvas.addEventListener('touchend', (e) => {
            e.preventDefault();
            isDrawing = false;
        });

        // Initialize
        initCanvas();
    </script>
